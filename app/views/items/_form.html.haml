= form_for @item do |f|
  - if @item.errors.any?
    #error_explanation
      %h2
        = pluralize(@item.errors.count, 'error')
        prohibited this item from being saved:
      %u1
        - @item.errors.full_messages.each do |msg|
          %li= msg
  %p
    = f.label :itemName
    %br/
    = f.text_field :itemName
  %p
    = f.label :category, :Category
    %br/
    = f.select :category, options_for_select([ "Canned", "Dried Food", "Soup", "Supllies", "Milk/Juice", "Other" ], " ") 
    //= f.text_field :category
  %p
    = f.submit